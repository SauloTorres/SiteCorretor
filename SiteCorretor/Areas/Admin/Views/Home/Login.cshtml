@model SiteCorretor.Models.Usuario

@{
    ViewBag.Title = "Login";
}

<h2 class="ml-4 mt-4" style="text-align: center;">Login</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <center class="mt-5">
        <div class="container">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group mt-5">
            <div class="col-md-5">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @data_val="true", @required="required", @placeholder = "Login" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5">
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @data_val="true", @required="required", @placeholder = "Senha"} })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Logar" class="btn btn-success" />
            </div>
        </div>
    </div>
    </center>
}